    "/system 空间\t\t: "   + "<b><#selectbg_g>" + getdisksize("/system", "m") + " MB" + "</#></b>\n"   +
      "\t剩余\t\t\t: "     + "<b><#selectbg_g>" + getdiskfree("/system", "m") + " MB" + "</#></b>\n\n" +
    "/data 空间\t\t: "     + "<b><#selectbg_g>" + getdisksize("/data", "m")   + " MB" + "</#></b>\n"   +
